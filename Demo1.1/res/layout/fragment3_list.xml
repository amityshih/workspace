<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <!-- android:background="#ffffcc" -->

    	   <RelativeLayout
    	       android:layout_width="fill_parent"
    	       android:layout_height="wrap_content"
    	       android:orientation="horizontal" >

    	       <!-- android:background="#ffcc99" -->

    	       <ImageButton
    	           android:id="@+id/imageBtnFundEx"
    	           android:layout_width="wrap_content"
    	           android:layout_height="wrap_content"
    	           android:layout_alignParentRight="true"
    	           android:layout_alignParentTop="true"
    	           android:layout_marginRight="15dp"
    	           android:background="@drawable/fund_ex" />

    	       <ImageButton
    	           android:id="@+id/imageBtnFundIn"
    	           android:layout_width="wrap_content"
    	           android:layout_height="wrap_content"
    	           android:layout_alignParentTop="true"
    	           android:layout_toLeftOf="@+id/imageBtnFundEx"
    	           android:background="@drawable/fund_in_over"/>

    	   </RelativeLayout>
	       
	   <LinearLayout 
	   android:orientation="horizontal"
	   android:layout_width="fill_parent"
       android:background="@color/purple" 	   
	   android:layout_height="wrap_content">
	       <TextView 
	   	   android:id="@+id/listview_detail01" 
	   	   android:text="Fund" 
	   	   android:textColor="@color/yollow"
	   	   android:textSize="12dip"
	   	   android:textStyle="bold"
	   	   android:paddingLeft="5dip"
		   android:layout_width="0dp"
	  	   android:layout_weight="2"
	   	   android:layout_height="match_parent">
	  	   </TextView>
	  	   <TextView 
		   android:id="@+id/listview_detail02" 
	  	   android:text="NAV" 
	  	   android:textColor="@color/yollow"
		   android:textStyle="bold"
		   android:textSize="12dip"
		   android:gravity="right"
		   android:layout_width="0dp"
	  	   android:layout_weight="1"
		   android:layout_height="match_parent">
	   	   </TextView>
	   	   	   	   
	   	   <TextView 
		   android:id="@+id/listview_detail03" 
		   android:text="Change" 
		   android:textSize="12dip"
		   android:textColor="@color/yollow"
		   android:textStyle="bold"
		   android:gravity="right"
		   android:layout_width="0dp"
	  	   android:layout_weight="1"
		   android:layout_height="match_parent">
	   	   </TextView>
	   	   
	   	   <TextView 
		   android:id="@+id/listview_detail04" 
		   android:text="Change%" 
		   android:textColor="@color/yollow"
		   android:textStyle="bold"
		   android:textSize="12dip"
		   android:gravity="right"
		   android:layout_width="0dp"
	  	   android:layout_weight="1"
		   android:layout_height="match_parent">
	   	   </TextView>
	   	   
	   	   <TextView 
		   android:id="@+id/listview_detail05" 
		   android:text="Date" 
		   android:textColor="@color/yollow"
		   android:textStyle="bold"
		   android:textSize="12dip"
		   android:gravity="right"
	   	   android:paddingRight="20dip"
		   android:layout_width="0dp"
	  	   android:layout_weight="1"
		   android:layout_height="wrap_content">
	   	   </TextView>
	   </LinearLayout>

	   <ListView 
	      android:id="@+id/ListView_detail"       
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:choiceMode="singleChoice"
          android:divider="@color/gray"
          android:dividerHeight="0.5dp"
	   	  android:background="@color/black" >	     
          <!-- android:listSelector="@color/gray" -->
	      <!-- android:cacheColorHint="@color/white" -->
	   </ListView>
</LinearLayout>