<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <!-- android:background="#ffffcc" -->

    	   <RelativeLayout
    	       android:layout_width="fill_parent"
    	       android:layout_height="wrap_content"
    	       android:orientation="horizontal" >

    	       <!-- android:background="#ffcc99" -->

    	       <ImageButton
    	           android:id="@+id/imageBtnFundEx"
    	           android:layout_width="wrap_content"
    	           android:layout_height="wrap_content"
    	           android:layout_alignParentRight="true"
    	           android:layout_alignParentTop="true"
    	           android:layout_marginRight="15dp"
    	           android:background="@drawable/fund_ex" />

    	       <ImageButton
    	           android:id="@+id/imageBtnFundIn"
    	           android:layout_width="wrap_content"
    	           android:layout_height="wrap_content"
    	           android:layout_alignParentTop="true"
    	           android:layout_toLeftOf="@+id/imageBtnFundEx"
    	           android:background="@drawable/fund_in_over"/>

    	   </RelativeLayout>
	       
	   <LinearLayout 
	   android:orientation="horizontal"
	   android:layout_width="fill_parent"
       android:background="@color/purple" 	   
	   android:layout_height="wrap_content">
		   <TextView 
		   android:id="@+id/listview_detail01" 
		   android:text="基金名稱" 
		   android:textColor="@color/white"
		   android:layout_marginLeft="18dp"
		   android:textSize="16dip"
		   android:textStyle="bold"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>

	   	   <TextView 
		   android:id="@+id/listview_detail02" 
		   android:text="淨值日期" 
		   android:textColor="@color/white"
		   android:textStyle="bold"
		   android:textSize="16dip"
		   android:layout_marginLeft="95dp"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail03" 
		   android:text="淨值" 
		   android:textSize="16dip"
		   android:textColor="@color/white"
		   android:textStyle="bold"
		   android:layout_marginLeft="35dp"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail04" 
		   android:text="漲跌" 
		   android:textColor="@color/white"
		   android:layout_marginLeft="45dp"
		   android:textStyle="bold"
		    android:textSize="16dip"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   	   <TextView 
		   android:id="@+id/listview_detail05" 
		   android:text="漲跌幅" 
		   android:textColor="@color/white"
		   android:layout_marginLeft="42dp"
		   android:textStyle="bold"
		   android:textSize="16dip"
		   android:layout_width="wrap_content" 
		   android:layout_height="wrap_content">
	   	   </TextView>
	   </LinearLayout>

	   <ListView 
	      android:id="@+id/ListView_detail"       
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:choiceMode="singleChoice"
          android:cacheColorHint="#00000000" >
	   	  <!-- android:background="#ffcc66" -->	     
	   </ListView>
</LinearLayout>